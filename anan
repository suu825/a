local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/BlizTBr/scripts/main/Orion%20X')))()

local Window = OrionLib:MakeWindow({
    Name = "Keyステップ", 
    HidePremium = false, 
    SaveConfig = true, 
    ConfigFolder = "ng", 
    IntroEnabled = true, 
    IntroText = "a", 
    IntroIcon = "", 
    Icon = ""
})

local AuraTab = Window:MakeTab({Name = "Keyステップ", Icon = "rbxassetid://117381520745599", PremiumOnly = false})

-- **許可されたKeyリスト**
local ValidKeys = {
    ["iyan.1223"] = true,
}

-- **保存されたキーを取得**
local savedKey = OrionLib.Flags["iyan.1223"] or ""

local KeyBox = AuraTab:AddTextbox({
    Name = "キーステップ",
    Default = , -- 保存されたキーをデフォルト値に設定
    Save = true, -- OrionのConfigに保存
    TextDisappear = false,
    Callback = function(value)
        -- **入力されたKeyを保存**
        OrionLib.Flags["iyan.1223"] = value

        -- **入力されたKeyが有効ならスクリプトをロード**
        if ValidKeys[value] then
            pcall(function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/suu825/a/refs/heads/main/iyan"))()
            end)
        end
    end
})

OrionLib:Init()
